{
    "name": "webignition/css-validator-wrapper",
    "type": "library",
    "description": "PHP wrapper for the W3C css-validator.jar command line tool",
    "keywords": ["css", "validator"],
    "homepage": "https://github.com/webignition/css-validator-wrapper",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "webignition\\CssValidatorWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\Tests\\CssValidatorWrapper\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit -c phpunit.ci.xml --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/webignition/web-resource-retriever"
        }
    ],
    "require": {
        "php": ">=5.6",
        "webignition/css-validator-output-parser": ">=2.2.2",
        "webignition/web-resource-retriever":">=0.6,<1",
        "webignition/url":"^1.9",
        "guzzlehttp/guzzle":"^6",
        "webignition/html-document-link-finder":"^3",
        "webignition/web-page-model":">=3.1.1,<4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^3",
        "mockery/mockery": "^1",
        "php-mock/php-mock-mockery": "^1.2",
        "satooshi/php-coveralls": "~1.0"
    },
    "minimum-stability":"stable",
    "prefer-stable":true
}
