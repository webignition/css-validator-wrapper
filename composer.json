{
    "name": "webignition/css-validator-wrapper",
    "type": "library",
    "description": "PHP wrapper for the W3C css-validator.jar command line tool",
    "keywords": ["css", "validator"],
    "homepage": "https://github.com/webignition/css-validator-wrapper",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "webignition\\CssValidatorWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\CssValidatorWrapper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2.0",
        "webignition/css-validator-output-parser": ">=5.1,<6",
        "webignition/web-resource-retriever":">=1.1,<2",
        "webignition/url": ">=2,<3",
        "guzzlehttp/guzzle":"^6",
        "webignition/html-document-link-finder":"^4",
        "webignition/web-page-model":">=5,<6",
        "webignition/web-resource-storage": ">=1,<2",
        "webignition/stream-factory": ">=0.1,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3",
        "mockery/mockery": "^1",
        "php-mock/php-mock-mockery": "^1.2"
    },
    "minimum-stability":"stable",
    "prefer-stable":true
}
