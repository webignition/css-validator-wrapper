{
    "name": "webignition/css-validator-wrapper",
    "type": "library",
    "description": "PHP wrapper for the W3C css-validator.jar command line tool",
    "keywords": ["css", "validator"],
    "homepage": "https://github.com/webignition/css-validator-wrapper",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "webignition\\CssValidatorWrapper\\": "src/",
            "webignition\\Tests\\CssValidatorWrapper\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --colors=always",
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR2",
        "ci": [
            "@composer cs",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=5.4",
        "webignition/css-validator-output-parser": ">=2.2.2",
        "webignition/web-resource-service":">=1.1,<2",
        "webignition/absolute-url-deriver":">=1.4.1.2",
        "webignition/url":">=1.9.9",
        "webignition/web-page-model":">=1.1,<2.0",
        "webignition/cookie-url-matcher":">=0.1,<1",
        "guzzlehttp/guzzle":">=5.2.0,<5.3",
        "webignition/guzzle-curl-exception":">=0.1.3,<1"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "3.*",
        "mockery/mockery": "~0.9",
        "php-mock/php-mock-mockery": "1.1.0"
    },
    "minimum-stability":"dev",
    "prefer-stable":true
}
